<!DOCTYPE html>
<html>
  <head>
    <title>Mealplanner</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <% if logged_in? %>
                <%= link_to "Home", user_path(current_user), class: "navbar-brand" %>
                <%= link_to "My Cookbook", recipe_cards_path, class: "navbar-brand" %>
                <%= link_to "My Pantry", pantry_items_path, class: "navbar-brand" %>
                <%= link_to "Browse Recipes", recipes_path, class: "navbar-brand" %>
                <%= link_to "Browse Ingredients", ingredients_path, class: "navbar-brand" %>
                <%= link_to "Log Out", sessions_path, method: :delete, class: "navbar-brand" %>
            <% else %>
              <%= link_to "Sign Up", new_user_path, class: "navbar-brand" %>
              <%= link_to "Sign In", signin_path, class: "navbar-brand" %>
          <% end %>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>

      <!-- content -->
      <div class="container"  role="main">
        <% if flash[:error]%>
          <ul><% flash[:error].each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
        <% end %>
        <%= yield %>
      </div>
    </body>
  </html>
